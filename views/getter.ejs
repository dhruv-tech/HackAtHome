<!DOCTYPE>
<html>
    <head>
        <title>Requests - NEKO Neighborhood Dashboard</title>
        <%- include('partials/top'); %>

        <div class = "row d-flex justify-content-center">
          <div class="col-md-12 col-lg-11 no-pad grey-text">
              <h2><b>Request for goods</b></h2>
              <h5>#StayHome #StaySafe</h5>
          </div>
      </div>

        <% arr.forEach(function(item) { %>
          <div class = "row d-flex justify-content-center top-pad grey-text">
            <div class="col-md-12 col-lg-11 whitebg card-help">
            <h3><%= item.category %></h3>
            <p><b><%= item.name %> (<a href="tel:<%= item.phone %>">Call</a>)</b></p>
            <p><%= item.description %></p>
            <br/>
            <button type="button" id="<%=item._id%>" onclick="buy('<%=item._id%>')" class="btn btn-primary">Get for <%= item.name %></button>  
            </div>   
          </div>
        <%})%>

        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.0/jquery.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
        <script src="/static/js/login.js"></script>
    </body>

</html>